---
layout: layouts/base.njk
---
<article class="project-page">

  {# 1. PROJECT HERO #}
  <header class="project-hero" style="background-image: url('{{ heroImage }}');">
    {# Intentionally empty so user can see details below #}
  </header>

  {# 2. MAIN CONTENT WRAPPER #}
  <div class="project-main-content">

    {# Left Column: Sticky Nav (Desktop Only) #}
    <aside class="project-sidebar">
      <h3 class="sidebar-label">Click to jump to section â†“</h3>
      <nav class="project-sidebar-nav" aria-label="Project sections">
        <ul>
         {% for item in projectNav %}
          <li>
            <a href="{{ item.href }}" class="sidebar-link">
              <div class="sidebar-link-main">
                <span class="sidebar-title">{{ item.title }}</span>
                
                <div class="sidebar-tags">
                  {% if item.type %}
                    <span class="tag tag-type">{{ item.type }}</span>
                  {% endif %}
                  {% if item.time %}
                    <span class="tag tag-time">{{ item.time }}</span>
                  {% endif %}
                </div>
              </div>

              {% if item.subtitle %}
                <span class="sidebar-subtitle">{{ item.subtitle }}</span>
              {% endif %}
            </a>
          </li>
          {% endfor %}
        </ul>
      </nav>
    </aside>

    {# Right Column: Scrollable Content #}
    <div class="project-content-scroll">

      {# This includes the meta box and uses this page's front matter #}
      {% include "partials/project-meta.njk" %}

      {# This is where your Markdown/Nunjucks content will go #}
      {{ content | safe }}

    </div>
  </div>

</article>